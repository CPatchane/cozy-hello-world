{
  "name": "appname",
  "version": "0.1.0",
  "main": "app/index.js",
  "scripts": {
    "test": "npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/{github_username}/{github_slug}.git"
  },
  "author": "{github_username}",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/{github_username}/{github_slug}/issues"
  },
  "homepage": "https://github.com/{github_username}/{github_slug}#readme",
  "scripts": {
    "build": "env OPTIMIZE=true webpack",
    "clean": "rm -rf public",
    "copy:manifest": "install -m0644 package.json README.md LICENSE public",
    "deploy": "git-directory-deploy --username {github_username} --email {github_email} --directory public/ --branch build --repo=https://$GITHUB_TOKEN@github.com/{github_username}/{github_slug}.git",
    "tx": "tx pull --all || true",
    "postbuild": "npm run copy:manifest",
    "prebuild": "npm-run-all clean tx",
    "prewatch": "npm run clean",
    "test": "true",
    "watch": "webpack --display-modules --display-chunks --watch"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.3",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.8",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-runtime": "^6.18.0",
    "chai": "^3.5.0",
    "copy-webpack-plugin": "^4.0.1",
    "cozy-ui": "^0.1.7",
    "css-loader": "^0.26.0",
    "css-mqpacker": "^5.0.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "json-loader": "^0.5.4",
    "mocha": "^3.2.0",
    "mockery": "^2.0.0",
    "node-polyglot": "^2.2.1",
    "nodemon": "^1.11.0",
    "npm-run-all": "^3.1.1",
    "postcss": "^5.2.6",
    "postcss-loader": "^1.1.1",
    "pug": "^2.0.0-beta6",
    "pug-loader": "^2.3.0",
    "sinon": "^1.17.6",
    "style-loader": "^0.13.1",
    "stylus": "^0.54.5",
    "stylus-loader": "^2.4.0",
    "svg-sprite-loader": "0.0.31",
    "webpack": "^1.13.3"
  }
}
